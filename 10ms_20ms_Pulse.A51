// The program is done with the help of Timer ...

ORG 0000H
LJMP main
ORG 0100H
	DELAY1:
	MOV TH0,#0D8H
	MOV TL0,#0F0H
	SETB TR0
	CHECK1: JNB TF0,CHECK1
	CLR TR0
	CLR TF0
	RET
	
	ORG 0160H
		DELAY2:
		MOV TH1,#0B1H
		MOV TL1,#0E0H
		SETB TR1
		CHECK:JNB TF1,CHECK
		CLR TR1
		CLR TF1
		RET
	
	ORG 0030H
	main:
	CLR P1.0
	MOV TMOD,#11H
	REPEAT: SETB P1.0
	      ACALL DELAY1
	      CLR P1.0
	      ACALL DELAY2
	      SJMP REPEAT
END 
